<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/startscreen">


	<LinearLayout android:id="@+id/linearLayout2"
		android:orientation="vertical"
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
	        <View
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="4"
		        android:scaleType="fitCenter"
	        />

			
			<Button android:id="@+id/startButton" 
				android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
				android:layout_weight="3"
				android:onClick="playGame" 
				android:background="@drawable/bttn_play"
			/>
			<Button android:id="@+id/highscoreButton"
				android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
				android:layout_weight="3"
				android:background="@drawable/bttn_highscore"
				android:onClick="showScore"
			/>	
		
			<Button android:id="@+id/infoButton" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="3" 
				android:background="@drawable/bttn_info"
				android:onClick="showInfo"
			/>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout3"
		android:orientation="vertical"
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
	</LinearLayout>
	
</LinearLayout>
